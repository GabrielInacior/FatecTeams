{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Webapp - Debug Backend",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/server.ts",
            "args": [],
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "dotenv/config"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development",
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "name": "üîß Webapp - Debug with Nodemon",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
            "args": [
                "--exec",
                "ts-node src/server.ts"
            ],
            "runtimeArgs": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "üß™ Webapp - Debug Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--detectOpenHandles",
                "--forceExit"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "test"
            },
            "envFile": "${workspaceFolder}/.env.test",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        },
        {
            "name": "üêõ Webapp - Attach to Running Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": null,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "üöÄ Webapp - Debug Build Production",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/dist/server.js",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "production"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "preLaunchTask": "build",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ],
    "compounds": [
        {
            "name": "üåü Webapp - Full Stack Debug",
            "configurations": [
                "üöÄ Webapp - Debug Backend"
            ],
            "stopAll": true
        }
    ]
}
